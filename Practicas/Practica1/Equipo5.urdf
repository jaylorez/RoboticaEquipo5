<robot name="rrp_robot"> 
  
  <!-- Materiales -->
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>
    <material name="magenta">
        <color rgba="1 0 1 1"/>
    </material>
    <material name="cyan">
        <color rgba="0 1 1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
  <!--Definició de eslabones--> 
<link name = "world_link">
</link>
<link name = "base_link">
  <visual>
      <origin xyz = "0 0 0.05" rpy = "1.57 0 0"/> 
        <geometry> 
        <box size = "0.2 0.1 0.2"/> 
     </geometry> 
        <material name = "black"> 
      </material> 
    </visual> 
</link> 
 <link name = "x_axis"> 
   <visual> 
      <origin xyz = "0 0 0" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.04 0.005 0.005"/> 
     </geometry> 
      <material name = "red"> 
      </material> 
    </visual> 
  </link> 
<link name = "y_axis"> 
   <visual> 
      <origin xyz = "0 0 0" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.005 0.04 0.005"/> 
     </geometry> 
      <material name = "green"> 
      </material> 
    </visual> 
  </link> 
<link name = "z_axis"> 
   <visual> 
      <origin xyz = "0 0 0" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.005 0.005 0.04"/> 
     </geometry> 
      <material name = "blue"> 
      </material> 
    </visual> 
  </link> 


<link name = "support_link"> 
   <visual> 
      <origin xyz = "0 0 0.2" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.03 0.03 0.3"/> 
     </geometry> 
      <material name = "black"> 
      </material> 
    </visual> 
  </link> 
<link name = "shoulder_link"> 
   <visual> 
      <origin xyz = "0 0.15 0" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.03 0.3 0.03"/> 
     </geometry> 
      <material name = "magenta"> 
      </material> 
    </visual> 
  </link> 
<link name = "arm_link"> 
   <visual> 
      <origin xyz = "0 0.15 0" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.03 0.3 0.03"/> 
     </geometry> 
      <material name = "yellow"> 
      </material> 
    </visual> 
  </link> 
<link name = "handle_link"> 
   <visual> 
      <origin xyz = "0 0 0" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.03 0.03 0.15"/> 
     </geometry> 
      <material name = "yellow"> 
      </material> 
    </visual> 
  </link>
<link name = "forearm_link"> 
   <visual> 
      <origin xyz = "0 0 0" rpy = "0 0 0"/> 
    <geometry> 
      <box size = "0.02 0.02 0.15"/> 
     </geometry> 
      <material name = "cyan"/>
    </visual> 
  </link> 
 
  <!--Definició de juntas--> 
<joint name = "world_joint" type = "fixed"> 
  <parent link = "world_link"/> 
  <child link = "base_link"/> 
  <origin xyz = "0 0 0" rpy = "0 0 0"/> 
  <axis xyz = "0 0 1"/> 
</joint>
<joint name = "support_joint" type = "fixed"> 
  <parent link = "base_link"/> 
  <child link = "support_link"/> 
  <origin xyz = "0 0 0" rpy = "0 0 0"/> 
  <axis xyz = "0 0 1"/> 
</joint>

<joint name = "shoulder_joint" type = "revolute"> 
  <parent link = "support_link"/> 
  <child link = "shoulder_link"/> 
  <origin xyz = "0 0 0.335" rpy = "0 0 0"/> 
  <axis xyz = "0 0 1"/> 
  <limit effort="10.0" lower="-3.14" upper="3.14" velocity="0.5"/>
</joint>
<joint name = "x_joint" type = "fixed"> 
  <parent link = "base_link"/> 
  <child link = "x_axis"/> 
  <origin xyz = "0.2 0 0" rpy = "0 0 0"/> 
</joint>
<joint name = "y_joint" type = "fixed"> 
  <parent link = "base_link"/> 
  <child link = "y_axis"/> 
  <origin xyz = "0 0.2 0" rpy = "0 0 0"/> 
  <axis xyz = "0 0 0"/> 
</joint>

<joint name = "z_joint" type = "fixed"> 
  <parent link = "base_link"/> 
  <child link = "z_axis"/> 
  <origin xyz = "0 0 0.2" rpy = "0 0 0"/> 
  <axis xyz = "0 0 0"/> 
</joint>
<joint name = "arm_joint" type = "revolute"> 
  <parent link = "shoulder_link"/> 
  <child link = "arm_link"/> 
  <origin xyz = "0 0.3 0" rpy = "0 0 0"/> 
  <axis xyz = "0 0 1"/> 
  <limit effort="10.0" lower="-3.14" upper="3.14" velocity="0.5"/>
</joint>
<joint name = "handle_joint" type = "fixed"> 
  <parent link = "arm_link"/> 
  <child link = "handle_link"/> 
  <origin xyz = "0 0.3 -0.075" rpy = "0 0 0"/> 
  <axis xyz = "0 0 1"/> 
</joint>
<joint name = "forearm_joint" type = "prismatic"> 
  <parent link = "arm_link"/> 
  <child link = "forearm_link"/> 
  <origin xyz = "0 0.3 -0.075" rpy = "0 0 0"/> 
  <axis xyz = "0 0 1"/>
  <limit effort="10.0" lower="-0.12" upper="0" velocity="0.5"/>
</joint>
</robot>
